<style is:global>
  :root {
    --gap-quarter: 0.25rem;
    --gap-half: 0.5rem;
    --gap: 1rem;
    --gap-double: 2rem;

    --bg: #f7fafc;
    --fg: #2d3748;
    --accents-1: #4a5568;
    --accents-2: #718096;
    --accents-3: #a0aec0;
