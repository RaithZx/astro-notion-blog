        const newsletterOverlay = document.getElementById('newsletter-overlay');
        const newsletterCloseButton = document.getElementById('newsletter-close-button');
        const newsletterForm = document.getElementById('newsletter-form');
        const ctaButtons = document.querySelectorAll('button[class*="bg-amber-400"]');
        const footerNewsletterBtn = document.getElementById('footer-newsletter-btn');
        
        // Mobile Menu Functions
        function openMobileMenu() {
          mobileDrawer.classList.remove('-translate-x-full');
          document.body.style.overflow = 'hidden';
        }
        
        function closeMobileMenu() {
          mobileDrawer.classList.add('-translate-x-full');
          document.body.style.overflow = '';
        }
        
        // Newsletter Modal Functions
        function openNewsletterModal() {
          newsletterModal.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
          // Focus on email input
          setTimeout(() => {
            document.getElementById('newsletter-email').focus();
          }, 100);
        }
        
        function closeNewsletterModal() {
          newsletterModal.classList.add('hidden');
          document.body.style.overflow = '';
          // Reset form
          newsletterForm.reset();
        }
        
        // Mobile Menu Event Listeners
        mobileMenuButton.addEventListener('click', openMobileMenu);
        mobileCloseButton.addEventListener('click', closeMobileMenu);
        mobileOverlay.addEventListener('click', closeMobileMenu);
        
        // Newsletter Modal Event Listeners
        ctaButtons.forEach(button => {
          button.addEventListener('click', function(e) {
            e.preventDefault();
            openNewsletterModal();
          });
        });
        
        // Footer newsletter button
        if (footerNewsletterBtn) {
          footerNewsletterBtn.addEventListener('click', function(e) {
            e.preventDefault();
            openNewsletterModal();
          });
        }
        
        newsletterCloseButton.addEventListener('click', closeNewsletterModal);
        newsletterOverlay.addEventListener('click', closeNewsletterModal);
        
        // Newsletter Form Submission
        newsletterForm.addEventListener('submit', function(e) {
          e.preventDefault();
          
          const email = document.getElementById('newsletter-email').value;
          const name = document.getElementById('newsletter-name').value;
          const privacy = document.getElementById('newsletter-privacy').checked;
          
          if (!privacy) {
            alert('Por favor, konkordo ku a polítika di privasidade i termus di servisu.');
            return;
          }
          
          // Here you would typically send the data to your newsletter service
          // For now, we'll just show a success message
          alert(`Obrigadu! ${name ? name + ', ' : ''}inskrevu ku suksesu na newsletter.`);
          closeNewsletterModal();
        });
        
        // Close modals on escape key
        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape') {
            if (!mobileDrawer.classList.contains('-translate-x-full')) {
              closeMobileMenu();
            }
            if (!newsletterModal.classList.contains('hidden')) {
              closeNewsletterModal();
            }
          }
        });
        
        // Close mobile menu on window resize to desktop
        window.addEventListener('resize', function() {
          if (window.innerWidth >= 768) {
            closeMobileMenu();
          }
        });
      });
    </script>
