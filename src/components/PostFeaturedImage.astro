---
import type { Post } from '../lib/interfaces.ts'
import { getImageFromNotionUrl } from '../lib/image-helpers'
import ImageWithBlur from './ImageWithBlur.astro'

export interface Props {
  post: Post
  loading?: 'lazy' | 'eager'
}

const { post, loading = 'lazy' } = Astro.props

let imageModule: any = null
if (post.FeaturedImage && post.FeaturedImage.Url) {
  if (import.meta.env.DEV) {
    // In dev, use URL directly (images may not be downloaded yet)
    imageModule = post.FeaturedImage.Url
  } else {
    // In production, use pre-loaded image map for optimized images
    const imported = getImageFromNotionUrl(new URL(post.FeaturedImage.Url))
    if (imported) {
      imageModule = imported
    } else {
      // Fallback to URL if lookup fails
      imageModule = post.FeaturedImage.Url
    }
  }
}
---

{
  imageModule && (
    <ImageWithBlur
      src={imageModule}
      alt={post.Title || "Featured image of the post"}
      width={typeof imageModule === 'string' ? undefined : imageModule.width}
      height={typeof imageModule === 'string' ? undefined : imageModule.height}
      loading={loading}
      class="post-featured-image"
    />
  )
}
