import ComingSoon from '../components/ComingSoon.astro'
import SocialIcons from '../components/SocialIcons.astro'
import BackToTop from '../components/BackToTop.astro'

export interface Props {
  title: string
  description: string
  path: string
  ogImage: string
}

const { title = 'Ligadu', description = 'Artigus di siensia, teknolojia i saÃºdi', path = '/', ogImage = '' } = Astro.props

// Check if we should show the coming soon page
